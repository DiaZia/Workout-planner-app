<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_3"
    tools:context="com.example.semestralna_praca.Activity2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan your workout"
            android:textAlignment="center"
            android:textColor="@color/blue_2"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="What do you want to train today? \nChoose body parts"
            android:textAlignment="center"
            android:textColor="#272727" />

        <Button
            android:id="@+id/fullbody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_1"
            android:text="Fullbody workout" />

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/leftColumn"
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/biceps"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Biceps"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/chest"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Chest"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/shoulders"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Shoulders"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/biceps"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/triceps"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Triceps"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/shoulders"
                    app:layout_constraintTop_toBottomOf="@+id/chest"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/abs"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Abs"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shoulders"
                    app:layout_constraintVertical_bias="0.0" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/back"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/abs"
                    app:layout_constraintTop_toBottomOf="@+id/triceps"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/glutes"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Glutes"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/abs"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/quads"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Quads"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/glutes"
                    app:layout_constraintTop_toBottomOf="@+id/back"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/calves"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Calves"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/glutes"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/hamstrings"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_1"
                    android:text="Hamstrings"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.868"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.694" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/done"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/green_1"
                android:text="Done"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>